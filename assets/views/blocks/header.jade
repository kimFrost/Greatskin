// (BLOCK)(BEGIN) - Header
div.container.greatskin__blackbar.greatskin__blackbar--coal
	div.container__content
		div.container__inner
			div.inlinelist
				div.inlinelist__item.icon.icon--arrow 30 dages returret
				div.inlinelist__item.icon.icon--support Kundesupport
				div.inlinelist__item.icon.icon--calender 1-3 dages levering
				div.inlinelist__item.icon.icon--fast Fast fragt: DDK 29,-
				div.inlinelist__item.icon.icon--thumb Gratis fragt v/køb over 600,-
				div.inlinelist__item.icon.icon--arrowdown.icon--sideright.inlinelist__item--alignright Language
div.container.greatskin__header
	div.container__content
		div.container__inner
			a.greatskin__logo
				img(src="img/content/logo.png", alt="Greatskin")
			div.greatskin__nav
				nav.nav
					div.greatskin__navitem
						a.icon.icon--arrowdowngrey.icon--sideright link1
					div.greatskin__navitem
						a.icon.icon--arrowdowngrey.icon--sideright link2
					div.greatskin__navitem
						a.icon.icon--arrowdowngrey.icon--sideright link3
			div.greatskin__basket
				div.basketbox(data-ng-controller="BasketboxCtrl")
					div.basketbox__dropdown(data-ng-class="{'basketbox__dropdown--show':basketboxctrl.states.showbasket}")
						| Basket list
					div.basketbox__image
						div.basketbox__count 2
					div.basketbox__teaser(data-ng-click="basketboxctrl.togglebasket()")
						div.basketbox__icon
							div.icon.icon--arrowdownsmall
						div.basketbox__title Indkøbskurv
						div.grid.grid--24 2 varer i posen
						div.grid.grid--24
							| Total &nbsp
							b DDK 595,00
			div.greatskin__search
				div.greatskin__searchinner
					div.grid.grid--18
						input.greatskin__searchinput(type="text")
					div.grid.grid--6.grid--spaceright.grid--norelative
						input.greatskin__searchbutton(type="button")
// (BLOCK)(END) - Header