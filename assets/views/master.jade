doctype html
html(data-ng-app="greatskin", lang="da")
	head
		title Greatskin
		meta(charset="UTF-8")
		//meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1 user-scalable=no")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel='stylesheet', href='./css/greatskin.css')
		// Main app js
		script(src='./scripts/greatskin_head.js')
		block head
		// Fonts
		link(type="text/css", rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato:300,400,900,300italic,400italic,700italic,900italic')

	body
		section.greatskin(data-ng-controller="GreatskinCtrl")
			block glovalVars

			div.container.greatskin__blackbar.greatskin__blackbar--coal
				div.container__content
					div.container__inner
						div.inlinelist
							div.inlinelist__item.icon.icon--arrow 30 dages returret
							div.inlinelist__item.icon.icon--support Kundesupport
							div.inlinelist__item.icon.icon--calender 1-3 dages levering
							div.inlinelist__item.icon.icon--fast Fast fragt: DDK 29,-
							div.inlinelist__item.icon.icon--thumb Gratis fragt v/køb over 600,-
							div.inlinelist__item.icon.icon--arrowdown.icon--sideright.inlinelist__item--alignright Language

			include blocks/header.jade

			block body

			div.greatskin__body
				block content

			footer.greatskin__footer
				div.container
					div.container__content
						div.container__inner
							div.grid.grid--5
								p
									| Hos Greatskin.dk har vi en mission.
									| Vi ønsker at være landets fortrukne
									| valg indenfor kosmetik og hudpleje.
								p
									| Med en kombination af skarpe priser
									| og kvalitets produkter, har vi sat os
									| for, at alle fortjener en sund hud
									| uden at det skal koste en bondegård.
							div.grid.grid--1
							div.grid.grid--5
								p Facebook
							div.grid.grid--1
							div.grid.grid--5
								p Newsletter
							div.grid.grid--1
							div.grid.grid--6
								p Contact information

			div.container.greatskin__blackbar
				div.container__content
					div.container__inner
						div.grid.grid--20 2014 Greatskin.dk All rights reserved  l Sydbank: 6840 0001441925  -  Cvr: 35 61 61 01 -  Landevejen128, 5883 Oure
						div.grid.grid--4
							div.inlinelist.inlinelist--alignright
								div.inlinelist__item
									a.icon.icon--facebook.icon--noextrapadding
								div.inlinelist__item
									a.icon.icon--instragram.icon--noextrapadding



		script(src='./scripts/greatskin.js')